<%= form_for(@booking) do |f| %>
  <% if @booking.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@booking.errors.count, "error") %> prohibited this booking from being saved:</h2>
      <ul>
      <% @booking.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

<div class="form">
	<div class="left">
		<%= f.label :date, :class => "edit_label" %> <br />
		<%= f.label :time_start, :class => "edit_label" %> <br />
		<%= f.label :time_finish, :class => "edit_label" %><br />
		
		<% if @ready_to_book %>
			<%= f.label :conference_number_id, :class => "edit_label" %> <br />
		<% end %>
	</div>
	
	<div class="right">
    	<%= f.date_select 	:date, 
    						{:order => [:day, :month, :year], :start_year => Time.now.year}, 
    						{:class => "edit_field"} %> <br />
    	<%= f.time_select 	:time_start, 
    						{:minute_step => 15, :ampm => true,	:default => (Time.now + 1.hours)}, 
    						{:class => "edit_field"} %> <br />
    	<%= f.time_select	:time_finish, 
    						{:minute_step => 15, :ampm => true, :default => (Time.now + 2.hours)}, 
    						{:class => "edit_field"} %> <br />

		<% if @ready_to_book %>
			<%= f.collection_select :conference_number_id, @conference_numbers, :id, :conference_number, 
			{:prompt => true}, {:class => "edit_field"} %> <br />
			
			<%= add_button("Book", "add.png", "positive edit_field") %> 
		<% else %>		
 			<%= add_button("Check Availability", "zoom.png", "positive edit_field") %>
		<% end %>
					
		<%= add_link("Cancel", "cross.png", "negative edit_field", bookings_path)%>
	</div>
</div>
  
<% end %>