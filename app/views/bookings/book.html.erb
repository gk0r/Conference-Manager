<%= debug (@booking) %>

<%= form_tag do %>
    <fieldset>
      <legend>Shell for the Booking Object</legend>

        <%= label_tag :user_id, 'User ID:' %>
        <%= text_field_tag :user_id, (params[:user_id] or "1") %> <br />
      
        <%= label_tag :date, 'Date:' %>
        <%= text_field_tag :date, (params[:end] or Date.today) %> <br />
      
        <%= label_tag :time_start, 'Time Start:' %>
        <%= text_field_tag :time_start, (params[:time_start] or Time.now + 1.hours) %> <br />
        
        <%= label_tag :time_finish, 'Time Finish:' %>
        <%= text_field_tag :time_finish, (params[:time_finish] or Time.now + 2.hours) %> <br />
        
        <%= label_tag :conference_number_id %><br />
        <%= select_tag "conference_number_id", 
         options_from_collection_for_select(@conference_numbers, :id, :conference_number) 
        %>

        <%= submit_tag "Test !" %>
    
    </fieldset>
<% end %>

